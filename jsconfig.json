{
  "include": ["src/**/*"],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es6",
    "module": "commonjs",
    "paths": {
      "components/*": [
        "./src/components/*"
      ],
      "constants/*": [
        "./src/constants/*"
      ],
      "fixtures/*": [
        "./__fixtures__/*"
      ],
      "middlewares/*": [
        "./src/middlewares/*"
      ],
      "mocks/*": [
        "./__mocks__/*"
      ],
      "modules/*": [
        "./src/modules/*"
      ],
      "reducers/*": [
        "./src/reducers/*"
      ],
      "services/*": [
        "./src/services/*"
      ],
      "utils/*": [
        "./src/utils/*"
      ]
    }
  }
}
